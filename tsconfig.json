{
  "compilerOptions": {
    "outDir": "./build", // Ensure this is a different directory
    "rootDir": "./src", // Ensure this points to your source directory
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "allowJs": true,
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "./*.js",
    "./*.ts",
  ]
}
